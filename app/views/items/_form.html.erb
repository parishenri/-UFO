<%= simple_form_for item do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :rental_price %>
  <%= f.input :buying_price %>
  <%= f.input :size %>
  <%= f.input :color %>
  <%= f.input :availability, :as => :select, :label => "Available?"%>
  <%= f.input :start_date, as: :date, order: [:day, :month, :year], input_html: {class: "booking-input-bar"} %>
  <%= f.input :end_date, as: :date, order: [:day, :month, :year], input_html: {class: "booking-input-bar"} %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit %>
<% end %>
  <%= link_to 'back', items_path %> |

